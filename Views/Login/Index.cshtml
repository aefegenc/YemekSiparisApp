@if (ViewBag.AuthError != null)
{
    <div class="alert alert-danger mb-3" role="alert">
        @ViewBag.AuthError
    </div>
}

<form method="post" action="/login/login" autocomplete="off">
    <p><input required type="text" name="Username" placeholder="Kullanıcı Adı" /></p>
    <p><input required type="password" name="Password" placeholder="Şifre" /></p>
    <button>Giriş Yap</button>


</form>
<form method="post" action="/login/AddUser" autocomplete="off">
    <p><input required type="text" name="Username" placeholder="Kullanıcı Adı" /></p>
    <p><input required type="password" name="Password" placeholder="Şifre" /></p>
    <button>Kullanıcı Ekle</button>


</form>
